    "compilerOptions": {
        // add Bun type definitions
        "types": ["bun-types"],
    
        // enable latest features
        "lib": ["esnext"],
        "module": "esnext",
        "target": "esnext",

        // best practices
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
